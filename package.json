{
  "name": "setup-dojo",
  "description": "Setup Dojo on GitHub Actions.",
  "version": "0.0.0",
  "author": "Ammar Arif <evergreenkary@gmail.com>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "repository": "https://github.com/kariy/setup-dojo",
  "keywords": [
    "actions"
  ],
  "scripts": {
    "check": "prettier --check **/*.{js,ts,json,yml,yaml,md}",
    "build": "bun build src/main.ts --outfile=dist/index.js --minify --target=node",
    "lint": "eslint --format codeframe --exit-on-fatal-error --stats",
    "fmt": "prettier --write **/*.{js,ts,json,yml,yaml,md}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@github/local-action": "^3.2.1",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/jest": "^29.5.12",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.1",
    "rollup": "^4.40.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.3"
  }
}
